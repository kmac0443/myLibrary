<!doctype html>
<html>
<head>
	<title>Login</title>

	<link type="text/css" href="/stylesheets/style.css" rel="stylesheet" />
</head>
<body id="login-page">
	<nav>My Library</nav>

	<section class="login">
		<% if (error) { %>
		<p class="error">
			<%= error %></p>
		<% } %>
		<form action="/login" method="post">
			<div>
				<input type="text" class="login-input" name="username" placeholder="username" autofocus="true"></div>
			<div>
				<input type="password" class="login-input" name="password" placeholder="password"></div>
			<div>
				<button type="submit" class="btn">Login</button>
			</div>
		</form>
	</section>

</body>
</html>
